{
  "name": "daemon",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "dev": "yarn dev:watch:pkg",
    "dev:watch:bundle": "yarn build:bundle && chokidar \"./src/**/*.ts\" -c \"yarn build:bundle\" & yarn dev:run",
    "dev:watch:pkg": "yarn build && chokidar \"./src/**/*.ts\" -c \"yarn build\" && echo Daemon is built, but not running",
    "dev:pkg": "chokidar \"./src/**/*.ts\" -c \"yarn build:bundle\"",
    "dev:run": "nodemon index.js",
    "build": "yarn build:bundle && yarn build:pkg && yarn build:distribute",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --sourcemap --outfile=./index.js",
    "build:pkg": "yarn build:pkg:win & yarn build:pkg:unix",
    "build:pkg:unix": "pkg --config pkg-config-unix.json index.js",
    "build:pkg:win": "pkg --config pkg-config-win.json index.js",
    "build:distribute": "sh bin/distribute.sh"
  },
  "devDependencies": {
    "@types/ws": "^8.5.4",
    "axios": "^1.3.3",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.16.17",
    "exiftool.pl": "^10.53.0",
    "file-system-db": "^1.1.0",
    "md5-file": "^5.0.0",
    "nodemon": "^2.0.20",
    "pkg": "^5.8.0",
    "windows-network-drive": "^4.0.1",
    "ws": "^8.12.1"
  }
}
